<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Financial Services</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha384-**tu-integridad-aqui**" crossorigin="anonymous">
  <style>
    body {
      overflow-x: hidden;
      background-color: #fff; /* Cambiado a blanco */
      margin-top: 0;
    }
    .sidebar {
      height: 100%;
      width: 200px;
      position: fixed;
      top: 0;
      left: -200px;
      background-color: #fff; /* Cambiado a blanco */
      padding-top: 20px;
      
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      transition: left 0.3s;
    }
    .sidebar.active {
      left: 0;
    }
    .sidebar a {
      padding: 10px 15px;
      text-decoration: none;
      font-size: 14px;
      color: grey; /* Cambiado a un tono de gris más oscuro */
     
      display: block;
      transition: background-color 0.3s ease;
    }
    .sidebar a:hover {
      background-color: #ddd; /* Cambiado a un gris más claro al pasar el ratón */

    }
    .hamburger-menu {
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 999;
      cursor: pointer;
      font-size: 20px;
      color:grey; /* Cambiado a un tono de gris más oscuro */
      padding: 10px;
    }
    .hamburger-menu:hover {
      background-color: #ddd; /* Cambiado a un gris más claro al pasar el ratón */
    }
    .submenu-item a {
      font-size: 10px;
      font-weight: bold;
      font-family: Arial, sans-serif;
    }
    .sidebar a i {
      margin-right: 10px;
      color: grey;
    }
    .sidebar a.active {
      background-color: #ddd; /* Cambiado a un gris más claro para el elemento activo */
      color: grey; /* Cambiado a negro para el elemento activo */
    }
    .sidebar a.active i {
      color: grey; /* Cambiado a negro para el icono del elemento activo */
    }
    .sidebar a {
      margin-top: 30px; /* Agregar margen superior adicional */
    }
    /* Selector para el enlace del menú "Inicio" */
    .sidebar a[href="/main"] {
      background-color: #fff; /* Cambiado a blanco */
      color: grey; /* Cambiado a un tono de gris más oscuro */
      
    }
  </style>
</head>
<body>
  <!-- Botón de menú hamburguesa -->
  <div class="hamburger-menu" id="hamburger-menu">
    <i class="fas fa-bars"></i>
  </div>

  <div class="sidebar" id="sidebar">
    <div style="margin-top: 20px;"> <!-- Ajustar el margen superior -->
      <a href="/main" class="active">
        <i class="fas fa-home"></i> Inicio
      </a>
      <a href="/dashboard">
        <i class="far fa-chart-bar"></i> Realtime Dashboard
      </a>
      <a href="#">
        <i class="fas fa-chart-pie"></i> Estadísticas
      </a>
      <a href="#">
        <i class="fas fa-file-alt"></i> Logs
      </a>
      <a href="#">
        <i class="fas fa-file"></i> Reportes
      </a>
    </div>
    <a class="btn btn-danger logout-btn" href="/index.html">
      <i class="fas fa-sign-out-alt"></i> Logout
    </a>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const hamburgerMenu = document.getElementById('hamburger-menu');
      const sidebar = document.getElementById('sidebar');

      hamburgerMenu.addEventListener('click', function () {
        sidebar.classList.toggle('active');
      });
    });
  </script>

</body>
</html>
